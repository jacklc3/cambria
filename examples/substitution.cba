with handler {
  $p -> Unique,
  return x  -> return (inl x),
  var a _ -> return (inr a),
  sub _ k -> do c <- !unique () in
    case k (inl c) of {
      inl x -> return (inl x),
      inr d -> if d == c then k (inr ()) else return (inr d)
    }
} handle (
  declare !sub : Unit ~> $p + Unit.
  declare !var : $p   ~> Int.

  case !sub () of {
    inl a -> case !sub () of {
      inl b -> !var a,
      inr _ -> return 2
    },
    inr _ -> return 3
  }
)
